{
	"name": "PluggedIn Chrome Addon",
	"manifest_version": 2,
	"version": "1",
	"web_accessible_resources": ["pluggedIn.js"],
	"description": "Adds Extra Features to Plug.dj",
	"permissions": ["tabs", "*://*.plug.dj/*"],
	"background": {
		"scripts": ["background.js"]
	},
	"page_action" :
	{
		"default_icon" : "img/logo.png",
		"default_title" : "PluggedIn",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"run_at": "document_idle",
			"matches": ["*://*.plug.dj/*"],
			"js": ["jquery.min.js","pluggedIn.js"]
		}
	]
}